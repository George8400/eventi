
<section class="container container-event">

    <h1 class="title-event">{{event.title}}</h1>

    <div class="box-image">
        <img src="https://eventi-images.s3.eu-central-1.amazonaws.com/{{event.image}}" alt="">
    </div>

    <div class="dati-event">
        <h4>Luogo</h4>
        <p><a href="https://www.google.com/maps/search/?api=1&query={{event.indirizzoMaps}}" target="_blank"><i class="fas fa-map-marker-alt"></i> {{event.citta}}, {{event.indirizzo}}</a></p>
        
       <h4>Data Inizio</h4>
        <p><a href="https://www.google.com/calendar/render?action=TEMPLATE&text={{event.title}}&details=Evento+salvato+da+Youlivent&location={{event.indirizzoMaps}}&dates={{event.dateUtility_i}}T{{event.hoursUtility_i}}00Z%2F{{event.dateUtility_f}}T{{event.hoursUtility_f}}00Z"
                target="_blank">
                <i class="fas fa-calendar-day"></i> 
                {{event.giorno_i}}-{{event.mese_i}}-{{event.anno_i}}
            </a>
        </p>
        <p><i class="fas fa-clock"></i> {{event.ora_i}}h</p>

        <h4>Data Fine</h4>
        <p><a href="https://www.google.com/calendar/render?action=TEMPLATE&text={{event.title}}&details=Evento+salvato+da+Youlivent&location={{event.indirizzoMaps}}&dates={{event.dateUtility_i}}T{{event.hoursUtility_i}}00Z%2F{{event.dateUtility_f}}T{{event.hoursUtility_f}}00Z"
                target="_blank">
                <i class="fas fa-calendar-day"></i> 
                {{event.giorno_f}}-{{event.mese_f}}-{{event.anno_f}}
            </a>
        </p>
        <p><i class="fas fa-clock"></i> {{event.ora_f}}h</p>

        {{!-- views --}}

        <p><i class="fas fa-eye"> </i> {{event.views}}</p>
    </div>

    <br>

    <div class="dati-event">
        <p class="description">{{event.description}}</p>
    </div>  

    


</section>