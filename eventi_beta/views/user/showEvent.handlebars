
{{#if event}}
{{#if user}}
<h5 style="text-align: center; color: #555">Bacheca di {{user.[0].email}}</h5>
{{/if}}
<h2 style="text-align: center; color: #555">Eventi trovati</h2>


<div class="container">
    {{#each event}}
       <a href="eventi/{{_id}}">
            <section class="container__card">
                <div class="container__title-views">
                    <h1 class="title-event">{{title}}</h1>
                    <div class="continer__views">
                        <p><i class="fas fa-eye"></i>{{views}}</p>
                    </div>
                </div>
                <p><i class="fas fa-map-marker-alt"></i> {{citta}}</p>
                <p><i class="fas fa-calendar-day"></i> {{giorno_i}}-{{mese_i}}-{{anno_i}}</p>
                <p><i class="fas fa-clock"></i> {{ora_i}}h</p>
                {{!-- <img src="https://source.unsplash.com/random" style="max-width: 100%; position: relative" alt=""> --}}
                <img src="https://eventi-images.s3.eu-central-1.amazonaws.com/{{image}}" alt="">
                <p>{{description}}</p>
            </section>
        </a>
    {{/each}}    
</div>

{{else}}

    <h4 style="text-align: center; color: #555">Non ci sono eventi nella tua bacheca. Prova a crearne uno!</h4>

{{/if}}

<!-- BUTTON DASHBOARD -->
<div class="hdr__nav__user">
            <!--Menu-->
            <ul class="hdr__nav__user__menu">
                <li class="hdr__nav__user__menu__item">
                      <div class="tooltip">
                          <span class="tooltiptext">Dashboard</span>     <!--tooltip da aggiustare-->
                      </div>
                      
                    <form action="/user/userEvents" method="get">
                        <button type="submit">
                            <i class="fas fa-tachometer-alt" style="color: #777"></i>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
